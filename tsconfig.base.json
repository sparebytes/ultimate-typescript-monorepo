    "baseUrl": ".",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "strict": true,
    "noUnusedLocals": true,
    "composite": true,
    "paths": {
